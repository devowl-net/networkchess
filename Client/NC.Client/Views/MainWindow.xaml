<Window x:Class="NC.Client.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NC.Client"
        xmlns:gameFields="clr-namespace:NC.ChessControls.GameFields;assembly=NC.ChessControls"
        xmlns:viewModels="clr-namespace:NC.Client.ViewModels"
        mc:Ignorable="d"
        d:DataContext="{d:DesignInstance viewModels:MainWindowViewModel}"
        Title="MainWindow" SizeToContent="WidthAndHeight">
    <Border BorderThickness="1" BorderBrush="Black" Background="White">
        <gameFields:FlatGameField FieldFrame="{Binding ChessFieldViewModel.GameField, Mode=TwoWay}" Controller="{Binding ChessFieldViewModel.Controller}" BlackCellBrush="#D28D49" WhileCellBrush="#FFCE97" Width="400" Height="400" /> 
    </Border>
</Window>
